
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_UserCourseLayout.cshtml";
    var lst = new AVStaffing.Models.Entities.ApplicationDbContext().Course.ToList();
}

<div class="subheader py-2 py-lg-6  subheader-transparent " id="kt_subheader">
    <div class=" container  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
        <div class="d-flex align-items-center flex-wrap mr-1">
            <div class="d-flex align-items-baseline flex-wrap mr-5">
                <h5 class="text-dark font-weight-bold my-1 mr-5">
                    Offered Courses
                </h5>
                <ul class="breadcrumb breadcrumb-transparent breadcrumb-dot font-weight-bold p-0 my-2 font-size-sm">
                    <li class="breadcrumb-item">
                        <a href="#" class="text-muted">
                            Courses
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="d-flex flex-column-fluid">
    <div class="container">
        <div class="card card-custom">
            <div style="padding:3%">
                <div class="text-left">
                    <h2 style="font-size: 24px; font-weight: 600; font-style: inherit;" class="title">About DigiSkills.pk</h2>
                </div>
                <p style="font-size: 14px; font-weight: 400; text-align: left">DigiSkills.pk is the largest Training Program in Pakistan offering best <span style="font-weight: bold;">Free Online Courses</span> in freelancing Skills with E-Certificates issued by VU and Ignite. Over <span style="font-weight: bold;">3.5 million trainings</span> have been imparted <span style="font-weight: bold;">since 2018</span> to generate skilled workforce in Future of Work and to strengthen digital economy of Pakistan.DigiSkills.pk is the largest Training Program in Pakistan offering best <span style="font-weight: bold;">Free Online Courses</span> in freelancing Skills with E-Certificates issued by VU and Ignite. Over <span style="font-weight: bold;">3.5 million trainings</span> have been imparted <span style="font-weight: bold;">since 2018</span> to generate skilled workforce in Future of Work and to strengthen digital economy of Pakistan</p>

            </div>
            <div class="card-body mt-2">
                <table class="table table-separate table-head-custom collapsed dataTable">

                    <thead>
                        <tr>
                            <td>Sr.No</td>
                            <th>Name</th>
                            <th style="text-align:center">Action</th>
                        </tr>
                    <thead>
                    <tbody>
                        @{
                                int serialNumber = 1;
                                foreach (var item in lst)
                                {
                                <tr>
                                    <td>@serialNumber</td>
                                    <td>@item.Name </td>
                                    <td width="17%">
                                        <a class="nav-link btn btn-clean active" href="@Url.Action("ShowCourseContent", "UserCourse", new { courseId = item.Id })" id=@item.Id>
                                            Start Learning
                                        </a>
                                    </td>
                                </tr>
                                serialNumber++;
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
